@model OnlineStoreDomain.Model.Category

@{
    ViewData["Title"] = "Створення категорії";
}

<div class="container mt-4 p-4 bg-light shadow rounded">
    <h1 class="mb-4 text-black">Створення категорії</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Назва категорії</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Створити</button>
                    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model OnlineStoreDomain.Model.Category

@{
    ViewData["Title"] = "Редагування категорії";
}

<div class="container mt-4">
    <h1 class="mb-4 text-black">Редагувати категорію</h1>

    <div class="card p-4 bg-light shadow-sm">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" style="width: 500px"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" class="form-control w-50" />

            <div class="d-flex">
                <button type="submit" class="btn btn-primary me-2">Зберегти</button>
                <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

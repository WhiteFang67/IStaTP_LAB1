@model OnlineStoreDomain.Model.Order

@{
    ViewData["Title"] = "Редагувати замовлення";
}

<div class="container mt-4 p-4 bg-light shadow rounded">
    <h1 class="mb-4 text-black">Редагувати замовлення</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Phone" class="control-label">Телефон</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="DeliveryServiceId" class="control-label">Служба доставки</label>
                    <select asp-for="DeliveryServiceId" class="form-control" asp-items="@(ViewData["DeliveryServiceId"] as SelectList)" id="DeliveryServiceId" onchange="loadDeliveryDepartments()"></select>
                    <span asp-validation-for="DeliveryServiceId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="DeliveryDepartmentId" class="control-label">Відділення</label>
                    <select asp-for="DeliveryDepartmentId" class="form-control" asp-items="@(ViewData["DeliveryDepartmentId"] as SelectList)" id="DeliveryDepartmentId"></select>
                    <span asp-validation-for="DeliveryDepartmentId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label for="DeliveryDate" class="control-label">Дата доставки</label>
                    <input asp-for="DeliveryDate" class="form-control" type="date" id="DeliveryDate" value="@Model.DeliveryDate.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="deliveryTime" class="control-label">Час доставки</label>
                    <select name="deliveryTime" class="form-control" asp-items="@(ViewData["DeliveryTime"] as SelectList)"></select>
                    <span class="text-danger" data-valmsg-for="deliveryTime" data-valmsg-replace="true"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="StatusTypeId" class="control-label">Статус</label>
                    <select asp-for="StatusTypeId" class="form-control" asp-items="@(ViewData["StatusTypeId"] as SelectList)"></select>
                    <span asp-validation-for="StatusTypeId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Зберегти" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Обмеження дати доставки (не раніше ніж завтра)
            var tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            var minDate = tomorrow.toISOString().split('T')[0];
            $("#DeliveryDate").attr("min", minDate);

            // Завантаження відділень при зміні служби доставки
            loadDeliveryDepartments();
        });

        function loadDeliveryDepartments() {
            var deliveryServiceId = $("#DeliveryServiceId").val();
            var currentDepartmentId = '@Model.DeliveryDepartmentId'; // Поточне значення DeliveryDepartmentId
            $.ajax({
                url: '@Url.Action("GetDeliveryDepartments", "Orders")',
                type: 'GET',
                data: { deliveryServiceId: deliveryServiceId },
                success: function (data) {
                    var deliveryDepartmentSelect = $("#DeliveryDepartmentId");
                    deliveryDepartmentSelect.empty();
                    deliveryDepartmentSelect.append($('<option>', {
                        value: '',
                        text: 'Оберіть відділення'
                    }));
                    $.each(data, function (index, item) {
                        var isSelected = item.id == currentDepartmentId;
                        deliveryDepartmentSelect.append($('<option>', {
                            value: item.id,
                            text: item.name,
                            selected: isSelected
                        }));
                    });
                },
                error: function () {
                    alert("Помилка при завантаженні відділень.");
                }
            });
        }
    </script>
}
@model OnlineStoreDomain.Model.Product

@{
    ViewData["Title"] = "Додавання товару";
    var categories = ViewData["CategoryId"] as SelectList;
}

<div class="container mt-4 p-4 bg-light shadow rounded">
    <h1 class="mb-4 text-black">Додавання нового товару</h1>

    @if (TempData["ValidationErrors"] != null)
    {
        <div class="alert alert-danger">@TempData["ValidationErrors"]</div>
    }

    <form asp-action="Create" method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Категорія</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@categories">
                <option value="" disabled selected>Виберіть категорію</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Назва</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GeneralInfo" class="form-label">Загальна інформація</label>
            <input asp-for="GeneralInfo" class="form-control" />
            <span asp-validation-for="GeneralInfo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Characteristics" class="form-label">Характеристики</label>
            <input asp-for="Characteristics" class="form-control" />
            <span asp-validation-for="Characteristics" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Ratings" class="form-label">Рейтинг</label>
            <input asp-for="Ratings" class="form-control" type="number" min="1" max="10" step="1" />
            <span asp-validation-for="Ratings" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Кількість</label>
            <input asp-for="Quantity" class="form-control" type="number" min="0" step="1" value="0" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Створити</button>
            <a asp-action="Index" asp-route-all="true" class="btn btn-secondary">Скасувати</a>
        </div>
    </form>
</div>

